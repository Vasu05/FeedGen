<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credentials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.vasuchand.feedgen.Login.credentials">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topics to Select "
        android:textColor="#308CFC"
        android:textSize="18sp"

        />

    <View
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#3267C6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="16sp"
            android:text="Entertainment"/>
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/c2"
            android:layout_below="@id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="16sp"
            android:text="Sports"/>
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/c3"
            android:layout_below="@id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="16sp"
            android:text="Technology"/>
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/c4"
            android:layout_below="@id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="16sp"
            android:text="Politics"/>
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/c5"
            android:layout_below="@id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="16sp"
            android:text="Lifestyle"/>
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/c6"
            android:layout_below="@id/c5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="16sp"
            android:text="world"/>


    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#3267C6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your interest !"

        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/b1"
        android:text="Next"
        android:layout_marginTop="20dp"
        android:textColor="#308CFC"
        android:radius="3dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
         />

</LinearLayout>
