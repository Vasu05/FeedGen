<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/b1"
            android:text="India"
            android:padding="6dp"
            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            />
        <Button
            android:id="@+id/b3"
            android:text="Business"
            android:padding="6dp"
            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            />
        <Button
            android:id="@+id/b2"
            android:layout_alignParentRight="true"
            android:text="Sports"
            android:layout_marginRight="5dp"
            android:padding="6dp"
            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            />
        <Button
            android:id="@+id/b4"
            android:layout_below="@id/b1"
            android:layout_marginTop="20dp"
            android:text="Technology"
            android:layout_marginRight="5dp"
            android:padding="6dp"
            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            />

        <Button
            android:id="@+id/b5"
            android:layout_marginTop="23dp"
            android:text="Politics"

            android:padding="6dp"

            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@+id/b4"
            android:layout_alignEnd="@+id/b4" />

        <Button
            android:id="@+id/b7"
            android:text="Entertainment"

            android:padding="6dp"

            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginEnd="13dp"
            android:layout_above="@+id/b5"
            android:layout_alignEnd="@+id/b2" />

        <Button
            android:id="@+id/b6"
            android:text="world"

            android:padding="6dp"
            android:textColor="#308CFC"
            android:radius="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_alignBaseline="@+id/b5"
            android:layout_alignBottom="@+id/b5"
            android:layout_alignStart="@+id/b7"
            android:layout_marginStart="33dp" />


    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:id="@+id/t1"
            />
        <ImageView
            android:id="@+id/i1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/trending"
            />
    </RelativeLayout>

</LinearLayout>